<!-- SHOWING TEACHERS ACCORDING TO DEPARTMENT -->
{{#if teachers}}
  <h1>Your teachers:</h1>
  <div class="teachers">
    <div class="names">
      {{#each teachers}}
        <li> <a href="/users/give-feedback" onclick="">{{this}}</a> </li> <br />
      {{/each}}
    </div>
    <div class="subjects">
      {{#each subjects}}
        <li> {{this}} </li> <br />
      {{/each}}
    </div>
    <div class="designation">
      {{#each designation}}
        <li> {{this}} </li> <br />
      {{/each}}
    </div>
  </div>
{{/if}}
