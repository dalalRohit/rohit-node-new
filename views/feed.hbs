<div class="container-fluid" id="main">
<div class="col-md-5">
    <div class="form-area">

        <form role="form" method="post" action="/users/submit">
        <br style="clear:both">

          {{#if msg}}
            <div class="alert alert-info">
              {{msg}}
            </div>
          {{/if}}

            <h3 style="margin-bottom: 25px; text-align: center;">Feedback Form</h3>

            <div class="form-group">
              <label for="sel1">Select list:</label>
              <select class="form-control" id="sel1">
                <option>Subject-1</option>
                <option>Subject-2</option>
                <option>Subject-3</option>
                <option>Subject-4</option>
                <option>Subject-5</option>
                <option>Subject-6</option>

              </select>
            </div>

    				<div class="form-group">
              <label>Name of the teacher:</label>
						   <input type="text" class="form-control" id="name" name="name" >
					  </div>

          <div class="form-group">
            <label>Department</label>
            <input type="text" class="form-control" id="dept" name="dept" value="Department" required>
          </div>

          <div class="form-group">
            <label>Designation</label>
            <input type="text" class="form-control" id="des" name="des" value="Designation" required>

          </div>

        <div class="form-group" >
          <label>Teaching quality</label>
          <div class="form-group" >
              <select class="form-control" id="tqselect">
                <option value="Excellent" selected="selected">Excellent</option>
                <option value="Very Good">Very Good</option>
                <option value="Good">Good</option>
                <option value="Poor">Poor</option>
              </select>
          </div>
        <hr />

        <div class="form-group">
          <label>Punctuality</label>
          <!-- <input type="text" class="form-control" id="pun" name="pun" placeholder="Punctuality" required> -->
          <div class="form-group" >
              <select class="form-control" id="punselect">
                <option value="Excellent">Excellent</option>
                <option value="Very Good">Very Good</option>
                <option value="Good">Good</option>
                <option value="Poor">Poor</option>
              </select>
          </div>
        <hr />

      </div>

      <button type="submit" id="submit" formaction="/users/verify" name="verify" class="btn btn-primary pull-right">Verify Form</button> <br />



      <button type="submit" id="verify" formaction="/users/submit" onclick="display()" id="submit" name="submit" class="btn btn-primary pull-right" disabled>Submit Form</button>

        </form>
    </div>
</div>
</div>

</div>

<script type="text/javascript">
function display()
{
  var dept=$('#dept').val();
  var name=$('#name').val();
  var tq= $('#tqselect option:selected').text();
  var pun= $('#punselect option:selected').text();

  console.log(`Name: ${name} Dept: ${dept} Teaching Quality: ${tq} Punctuality: ${pun}`);
}
</script>
